<sect3 id="contexto">
	<title>Contexto</title>

	<informalfigure>
		<screenshot><mediaobject><imageobject>
					<imagedata fileref="pfichacontexto.eps" format="EPS" scale="40" align="center"></imagedata></imageobject>
