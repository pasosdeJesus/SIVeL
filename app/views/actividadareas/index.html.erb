<%- model_class = Actividadarea -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:nombre) %></th>
      <th><%= model_class.human_attribute_name(:observaciones) %></th>
      <th><%= model_class.human_attribute_name(:fechacreacion) %></th>
      <th><%= model_class.human_attribute_name(:fechadeshabilitacion) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @actividadareas.try(:each) do |actividadarea| %>
      <tr>
        <td><%= link_to actividadarea.id, actividadarea_path(actividadarea) %></td>
        <td><%= actividadarea.nombre %></td>
        <td><%= actividadarea.observaciones %></td>
        <td><%= actividadarea.fechacreacion %></td>
        <td><%= actividadarea.fechadeshabilitacion %></td>
        <td><%=l actividadarea.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_actividadarea_path(actividadarea), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      actividadarea_path(actividadarea),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_actividadarea_path,
            :class => 'btn btn-primary' %>
