<%- model_class = Actividadarea -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nombre) %>:</strong></dt>
  <dd><%= @actividadarea.nombre %></dd>
  <dt><strong><%= model_class.human_attribute_name(:observaciones) %>:</strong></dt>
  <dd><%= @actividadarea.observaciones %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fechacreacion) %>:</strong></dt>
  <dd><%= @actividadarea.fechacreacion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fechadeshabilitacion) %>:</strong></dt>
  <dd><%= @actividadarea.fechadeshabilitacion %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              actividadareas_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_actividadarea_path(@actividadarea), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              actividadarea_path(@actividadarea),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
