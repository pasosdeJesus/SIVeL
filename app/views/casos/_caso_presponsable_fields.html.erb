<div class='control-group nested-fields'>
  <div class="controls">

    <%= f.association :presponsable,
	    label: "Presunto Responsable",
      label_method: :nombre,
      value_method: :id %>
    <%= f.input :bloque %>
    <%= f.input :frente %>
    <%= f.input :brigada %>
    <%= f.input :batallon %>
    <%= f.input :division %>
    <%= f.input :otro %>
    <%= link_to_remove_association "Eliminar Presunto Responsable", f, 
        :class => 'btn-danger' %> 
  </div>
</div>
