<%= f.simple_fields_for :persona do |p| %>
  <%= render 'persona_fields', :f => p %>
<% end %>
<%= f.association :profesion,
  label: "Profesión",
  label_method: :nombre, 
  value_method: :id %>
<%= f.association :rangoedad,
  label: "Rango de Edad",
  label_method: :rango, 
  value_method: :id %>
<%= f.association :etnia,
  label: "Etnia",
  label_method: :nombre, 
  value_method: :id %>
<%= f.association :iglesia,
  label: "Religión/Iglesia",
  label_method: :nombre, 
  value_method: :id %>
<%= f.input(:orientacionsexual, collection: [
  [:Heterosexual, :H], [:Lesbiana, :L], [:Gay, :G], 
  [:Bisexual, :B], [:Transexual, :T]], prompt: "Orientación Sexual") %>
<%= f.input :id, as: :hidden %>

<%= f.simple_fields_for :victimasjr do |s| %>
  <%= s.association :estadocivil,
    label: "Estado Civil",
    label_method: :nombre, 
    value_method: :id %>
  <%= s.association :rolfamilia,
    label: "Rol en Familia",
    label_method: :nombre, 
    value_method: :id %>
  <%= s.association :maternidad,
    label: "Maternidad",
    label_method: :nombre, 
    value_method: :id %>
  <%= s.input :discapacitado, label: "Discapacitado",
      wrapper_html: { class: "span11 offset1" }  %>
  <%= s.association :actividadoficio,
    label: "Oficio",
    label_method: :nombre, 
    value_method: :id %>
  <%= s.association :escolaridad,
    label: "Nivel Escolar",
    label_method: :nombre, 
    value_method: :id %>
  <%= s.input :progadultomayor, label: "Programa Adulto Mayor",
      wrapper_html: { class: "span11 offset1" }  %>

<% end %>
