<%- model_class = Caso -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:fecharec) %></th>
      <th><%= model_class.human_attribute_name(:fecha) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @casos.each do |caso| %>
      <tr>
        <td><%= link_to caso.id, caso_path(caso) %></td>
        <td><%= caso.casosjr.fecharec %></td>
        <td><%= caso.fecha %></td>
	<td>
	<%- if !caso.created_at.nil? %>
        	<%=l caso.created_at %>
	<% end -%>
	</td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_caso_path(caso), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      caso_path(caso),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_caso_path,
            :class => 'btn btn-primary' %>
