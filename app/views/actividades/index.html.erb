<%- model_class = Actividad -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped" border='1'>
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:numero) %></th>
      <th><%= model_class.human_attribute_name(:minutos) %></th>
      <th><%= model_class.human_attribute_name(:nombre) %></th>
      <th><%= model_class.human_attribute_name(:areas) %></th>
      <th><%= model_class.human_attribute_name(:objetivo) %></th>
      <th><%= model_class.human_attribute_name(:proyecto) %></th>
      <th><%= model_class.human_attribute_name(:resultado) %></th>
      <th><%= model_class.human_attribute_name(:fecha) %></th>
      <th><%= model_class.human_attribute_name(:actividad) %></th>
      <th><%= model_class.human_attribute_name(:observaciones) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @actividades.each do |actividad| %>
      <tr>
        <td><%= link_to actividad.id, actividad_path(actividad) %></td>
        <td><%= actividad.numero %></td>
        <td><%= actividad.minutos %></td>
	<td><%= actividad.nombre %></td>
	<td><%= actividad.actividadareas.map { |i| i.nombre} %></td>
        <td><%= actividad.objetivo %></td>
        <td><%= actividad.proyecto %></td>
        <td><%= actividad.resultado %></td>
        <td><%= actividad.fecha %></td>
        <td><%= actividad.actividad %></td>
        <td><%= actividad.observaciones %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_actividad_path(actividad), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      actividad_path(actividad),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => 'Nueva'),
            new_actividad_path,
            :class => 'btn btn-primary' %>
