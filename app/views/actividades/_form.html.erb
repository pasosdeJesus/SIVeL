<%= simple_form_for @actividad, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.error_notification %>
  <%= f.input :numero %>
  <%= f.input :minutos %>
  <%= f.input :nombre %>
  <%= f.association :actividadareas, 
	  label: "Áreas",
	  label_method: :nombre, 
	  value_method: :id %>
  <%= f.input :objetivo %>
  <%= f.input :proyecto %>
  <%= f.input :resultado, label: "Resultado" %>
  <%= f.input :fecha, :input_html => { "data-behaviour" => "datepicker"}, 
	  :as => :string %>
